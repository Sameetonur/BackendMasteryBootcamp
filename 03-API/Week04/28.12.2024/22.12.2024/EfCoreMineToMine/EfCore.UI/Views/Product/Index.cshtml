@model IEnumerable<ProductDTO>
@{
    ViewData["Title"] = "Index";
}

<h1>ÜRÜNLER</h1>
<a class="btn btn-primary mt-3" asp-action="Create" asp-controller="Product">Yeni Ürün Ekle</a>
<hr>
@if (Model.Count() > 0)
{


    <table class="table table-bordered table-striped">
        <tr>
            <th>Id</th>
            <th>Ürün</th>
            <th>Fiyat</th>
            <th>İşlemler</th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@($"{product.Price:c0}")</td>
                <td>
                    <a class="btn btn-primary" asp-action="Update" asp-controller="Product"
                        asp-route-id="@product.Id">Düzenle</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id">Sil</a>
                </td>
            </tr>
        }

    </table>
}
else
{
    <div class="alert alert-warning">Henüz ürün eklenmemiş.</div>
}